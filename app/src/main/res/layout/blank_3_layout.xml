<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtBlank1"
        android:layout_width="@dimen/blankSize"
        android:layout_height="@dimen/blankSize"
        android:layout_gravity="center_vertical"
        android:background="@drawable/round"
        android:gravity="center_horizontal"
        android:text="@string/holderBlanks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtBlank2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBlank2"
        android:layout_width="@dimen/blankSize"
        android:layout_height="@dimen/blankSize"
        android:layout_gravity="center_vertical"
        android:background="@drawable/round"
        android:gravity="center_horizontal"
        android:text="@string/holderBlanks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtBlank3"
        app:layout_constraintStart_toEndOf="@id/txtBlank1"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBlank3"
        android:layout_width="@dimen/blankSize"
        android:layout_height="@dimen/blankSize"
        android:layout_gravity="center_vertical"
        android:background="@drawable/round"
        android:gravity="center_horizontal"
        android:text="@string/holderBlanks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtBlank4"
        app:layout_constraintStart_toEndOf="@id/txtBlank2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBlank4"
        android:layout_width="@dimen/blankSize"
        android:layout_height="@dimen/blankSize"
        android:layout_gravity="center_vertical"
        android:background="@drawable/round"
        android:gravity="center_horizontal"
        android:text="@string/holderBlanks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtBlank5"
        app:layout_constraintStart_toEndOf="@id/txtBlank3"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBlank5"
        android:layout_width="@dimen/blankSize"
        android:layout_height="@dimen/blankSize"
        android:layout_gravity="center_vertical"
        android:background="@drawable/round"
        android:gravity="center_horizontal"
        android:text="@string/holderBlanks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtBlank6"
        app:layout_constraintStart_toEndOf="@id/txtBlank4"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBlank6"
        android:layout_width="@dimen/blankSize"
        android:layout_height="@dimen/blankSize"
        android:layout_gravity="center_vertical"
        android:background="@drawable/round"
        android:gravity="center_horizontal"
        android:text="@string/holderBlanks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtBlank7"
        app:layout_constraintStart_toEndOf="@id/txtBlank5"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBlank7"
        android:layout_width="@dimen/blankSize"
        android:layout_height="@dimen/blankSize"
        android:layout_gravity="center_vertical"
        android:background="@drawable/round"
        android:gravity="center_horizontal"
        android:text="@string/holderBlanks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtBlank8"
        app:layout_constraintStart_toEndOf="@id/txtBlank6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtBlank8"
        android:layout_width="@dimen/blankSize"
        android:layout_height="@dimen/blankSize"
        android:layout_gravity="center_vertical"
        android:background="@drawable/round"
        android:gravity="center_horizontal"
        android:text="@string/holderBlanks"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/txtBlank7"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>