<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/lblPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblPoint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtPoint"/>

    <TextView
        android:id="@+id/txtPoint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/holderSingleChar"
        app:layout_constraintEnd_toStartOf="@id/lblWordCount"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/lblPoint"/>

    <TextView
        android:id="@+id/lblWordCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lblWordCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtWordCount"
        app:layout_constraintStart_toEndOf="@id/txtPoint"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtWordCount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/holderSingleChar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/lblWordCount"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>